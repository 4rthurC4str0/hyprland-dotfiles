{
    "layer": "top",
    "height": 15,
    "spacing": 1,


    "modules-left": [
        "hyprland/workspaces", "wlr/taskbar", "custom/cpuhistory"
    ],

    "modules-center": [
        "hyprland/window", "clock"
    ],

    "modules-right": [
        "backlight", "pulseaudio", "bluetooth", "network", "battery", "custom/power"
    ],





    "hyprland/workspaces": {
        "persistent-workspaces": {
            "*": 5 // 5 workspaces by default on every monitor
        }
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 14,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    "custom/cpuhistory": {
        "exec": "~/.config/waybar/scripts/cpu_history.py -d 60",
        "format": "<span color='#FFA500'> Ôíº </span>{}",
        "interval": 1,
        "return-type": "json",
        "on-click": "~/.config/waybar/scripts/cpu_history.py toggle"
    },



    "hyprland/window": {
        "format": "{initialTitle} |",
        "tooltip": false,
        "max-length": 50
    },

    "clock": {
        "format": "<b>{:%I:%M %p | %a.%d-%b}</b>",
        // "format": "<b>{:%I:%M %p}</b>",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
        // "on-click": "sleep 0.1 && swaync-client -t"
    },




